# vim:ft=sh:
# Includes runtime definition for environment values, or sane defaults

DEBUG=${DEBUG:-1}

# TASKD
TASKD_USER=${TASKD_USER:-task}
TASKD_HOME=${TASKD_HOME:-/home/task}
TASKD_DATA_DIR=${TASKD_HOME}/data
TASKD_LOG_DIR=${TASKD_HOME}/log
TASKD_CERTS_DIR=${TASKD_HOME}/server_certs
TASKD_CLIENTS_DIR=${TASKD_HOME}/client_certs
TASKD_RUNTIME_DIR=${TASKD_HOME}/run
TASKD_INSTALL_DIR=/install
TASKD_SERVER=${TASKD_SERVER:-task.localhost}
TASKD_PORT=${TASKD_PORT:-53589}
TASKD_CIPHERS=HIGH
TASKD_DEFAULT_ORG=${TASKD_DEFAULT_ORG:-Default organization}
TASKD_DEFAULT_GROUP=${TASKD_DEFAULT_GROUP:-Default group}
TASKD_DEFAULT_USER=${TASKD_DEFAULT_USER:-user}

BITS=${BITS:-4096}
EXPIRATION_DAYS=${EXPIRATION_DAYS:-365}
ORGANIZATION=${ORGANIZATION:-Org}
CN=${CN:-task.localhost}
COUNTRY=${COUNTRY:-SE}
STATE=${STATE:-France}
LOCALITY=${LOCALITY:-Rennes}
